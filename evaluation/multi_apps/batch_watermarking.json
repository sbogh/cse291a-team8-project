{
    "id": "batch_watermarking",
    "instruction": "Take the images found in '/images' ('image1.jpg') and add a text watermark saying 'cse291a' to each image.",
    "related_apps": ["os", "gimp", "terminal"],
    "human-ground-truth": {
        "single-action": [
            "`HOTKEY` ['control', 'alt', 't']",
            "`TYPING` gimp",
            "`PRESS` enter",
            "`CLICK` on 'File' in the menu bar",
            "`CLICK` on 'Open' button",
            "`TYPING` /home/user/Desktop/images/image1.jpg",
            "`CLICK` on 'Open' button",
            "`CLICK` on 'Tools' in the menu bar",
            "`CLICK` on 'Text' under 'Tools' in the menu bar",
            "`CLICK` on the image in the GIMP editor",
            "`TYPING` cse291a",
            "`CLICK` 'Size' in the 'Tool Options' palette and select 24 px",
            "`CLICK` 'Windows' in the menu bar",
            "`CLICK` 'Dockable Dialogs` in the 'Windows' menu",
            "`CLICK` 'Layers' under 'Windows' and 'Dockable Dialogs'",
            "`CLICK` text layer with watermark",
            "`CLICK` opacity field in the Layers menu",
            "`TYPING` 75.0",
            "`DRAG_TO` the text to the bottom right corner of the image",
            "`PRESS` on 'File' in the menu bar",
            "`PRESS` on 'Save As' in the menu bar",
            "`TYPING` image1_watermarked.jpg",
            "`PRESS` 'Save'"
        ],
    "grouped-action": [ 
        [
            "`HOTKEY` ['control', 'alt', 't']"
        ],
        [
            "`TYPING` gimp",
            "`PRESS` enter"
        ],
        [
            "`CLICK` on 'File' in the menu bar"
        ],
        [
            "`CLICK` on 'Open' button"
        ],
        [
            "`TYPING` /home/user/Desktop/images/image1.jpg",
            "`CLICK` on 'Open' button"
        ],
        [
            "`CLICK` on 'Tools' in the menu bar"
        ],
        [
            "`CLICK` on 'Text' under 'Tools' in the menu bar"
        ],
        [
            "`CLICK` on the image in the GIMP editor"
        ],
        [
            "`TYPING` cse291a"
        ],
        [
            "`CLICK` 'Size' in the 'Tool Options' palette and select 24 px"
        ],
        [
            "`CLICK` 'Windows' in the menu bar",
            "`CLICK` 'Dockable Dialogs` in the 'Windows' menu",
            "`CLICK` 'Layers' under 'Windows' and 'Dockable Dialogs'"
        ],
        [
            "`CLICK` text layer with watermark"
        ],
        [
            "`CLICK` opacity field in the Layers menu",
            "`TYPING` 75.0"
        ],
        [
            "`DRAG_TO` the text to the bottom right corner of the image"
        ],
        [
            "`PRESS` on 'File' in the menu bar",
            "`PRESS` on 'Save As' in the menu bar",
            "`TYPING` image1_watermarked.jpg",
            "`PRESS` 'Save'"
        ]
    ]
    }
}