{
    "id": "pull_request_reviewer",
    "instruction": "I want you to retrieve the first pull request assigned to me. Open all of these pull requests and perform a review of the contents and either approve or request changes. If you approve and a developer has also approved the pull request merge the changes.",
    "related_apps": ["os", "chrome"],
    "human-ground-truth": {
        "single-action": [
            "`TYPING` PR_NUMBER=$(gh pr list --assignee @me --limit 1 --json number | jq -r '.[0].number')",
            "`PRESS` enter",
            "`TYPING` gh pr view PR_NUMBER",
            "`CLICK` on `Chrome window`",
            "`CLICK` on `Terminal` window",
            "`TYPING` gh pr PR_NUMBER --approve",
            "`PRESS` enter",
            "`TYPING` gh pr view PR_NUMBER --json reviews",
            "`PRESS` enter",
            "`TYPING` cat pr_number.json",
            "`PRESS` enter",
            "`TYPING` gh pr merge PR_NUMBER --squash",
            "`PRESS` enter"
        ],
        "grouped-action": [
            [
                "`TYPING` PR_NUMBER=$(gh pr list --assignee @me --limit 1 --json number | jq -r '.[0].number')",
                "`PRESS` enter"
            ],
            [
                "`TYPING` gh pr view PR_NUMBER"
            ],
            [
                "`CLICK` on `Chrome window`"
            ],
            [
                "`CLICK` on `Terminal` window"
            ],
            [
                "`TYPING` gh pr PR_NUMBER --approve",
                "`PRESS` enter"
            ],
            [
                "`TYPING` gh pr view PR_NUMBER --json reviews",
                "`PRESS` enter"
            ],
            [
                "`TYPING` cat pr_number.json",
                "`PRESS` enter"
            ],
            [
                "`TYPING` gh pr merge PR_NUMBER --squash",
                "`PRESS` enter"
            ]
        ]
    }
}